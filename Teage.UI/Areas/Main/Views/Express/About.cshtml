                $("#sq").css("display", "block");
                $("#qx").css("display", "none");
                $("#gb").css("display", "none");
            }
            else if (flag == "2") {
                if (type == "3") {
                    $("#sq").css("display", "none");
                    $("#qx").css("display", "none");
                    $("#gb").css("display", "none");
                }
                else {
                    $("#sq").css("display", "none");
                    $("#qx").css("display", "none");
                    $("#gb").css("display", "block");
                }

            }
            else if (flag == "3") {
                if (type == "3") {
                    $("#sq").css("display", "none");
                    $("#qx").css("display", "none");
                    $("#gb").css("display", "none");
                }
                else {
                    $("#sq").css("display", "none");
                    $("#qx").css("display", "block");
                    $("#gb").css("display", "none");
                }
            }
        });
