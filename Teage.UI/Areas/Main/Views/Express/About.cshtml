        function Submit() {
            Exist();
            Ajax();
        }
        function Cancel() {
            Exist();
            Update(-1);
        }
        function Firm() {
            Exist();
            Update(2);
        }
        function Close() {
            Exist();
            Update(3);
        }
        function Exist() {
            var token = $.cookie('Token');
            $("#Token").val(token);
            if (token == "" || token == undefined) {
                layer.open({
                    content: '请先登录！',
                    height: 30,
                    btn: '确定',
                    shadeClose: false,
                    yes: function () {
                        window.location.href = "/Login/Index";
                    }
                });
            }
        }
        function Update(flag) {
            $.ajax({
                url: "@ViewBag.api/api/Express/Express/Update",
                type: "post",
                dataType: 'json',
                data: { Token: $("#Token").val(), ID: '@ViewBag.Id', Flag: flag },
                success: function (data) {
                    if (data.Meta.ErrorCode == "5" || data.Meta.ErrorCode == "7" || data.Meta.ErrorCode == "8") {
                        layer.open({
                            content: data.Meta.ErrorMsg,
                            height: 30,
                            btn: '确定',
                            shadeClose: false,
                            yes: function () {
                                window.location.href = "/Main/Express/Index";
                            }
                        });
                    }
                    else if (data.Meta.ErrorCode == "2") {
                        layer.open({
                            content: '请先登录！',
                            height: 30,
                            btn: '确定',
                            shadeClose: false,
                            yes: function () {
                                window.location.href = "/Login/Index";
                            }
                        });
                    }
                    else {
                        layer.open({
                            content: data.Meta.ErrorMsg
                           , skin: 'msg'
                           , time: 2 //2秒后自动关闭
                        });
                        return false;
                    }
                }
            });
        }
        function Ajax() {
            $.ajax({
                url: "@ViewBag.api/api/Express/Express/Edit",
                type: "post",
                dataType: 'json',
                data: { Token: $("#Token").val(), ID: '@ViewBag.Id' },
                success: function (data) {
                    if (data.Meta.ErrorCode == "3") {
                        layer.open({
                            content: '申请成功！',
                            height: 30,
                            btn: '确定',
                            shadeClose: false,
                            yes: function () {
                                window.location.href = "/Main/Express/Index";
                            }
                        });
                    }
                    else if (data.Meta.ErrorCode == "2") {
                        layer.open({
